<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeBackground">@color/colorAccent</item>
    </style>

    <!-- Theme for BottomSheetDialog -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="AnimDown">
        <item name="android:windowEnterAnimation">@anim/from_down</item>
        <item name="android:windowExitAnimation">@anim/to_down</item>
    </style>

    <style name="AnimFadeInOut">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AnimZoomInOut">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>

    <style name="AnimShake">
        <item name="android:windowEnterAnimation">@anim/shake</item>
        <item name="android:windowExitAnimation">@anim/shake</item>
    </style>

</resources>